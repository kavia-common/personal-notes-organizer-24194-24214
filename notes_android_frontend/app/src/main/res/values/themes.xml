<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.OceanProfessional" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/op_primary</item>
        <item name="colorPrimaryVariant">@color/op_primary_dark</item>
        <item name="colorSecondary">@color/op_secondary</item>
        <item name="colorError">@color/op_error</item>
        <item name="android:statusBarColor">@color/op_primary_dark</item>
        <item name="android:navigationBarColor">@color/op_background</item>
        <item name="android:windowBackground">@color/op_background</item>
        <item name="android:textColorPrimary">@color/op_text</item>
        <item name="android:textColorSecondary">@color/op_text_muted</item>
        <!-- Use the defined rounded shape style -->
        <item name="shapeAppearanceSmallComponent">@style/Shape.Ocean.Radius</item>
        <item name="shapeAppearanceMediumComponent">@style/Shape.Ocean.Radius</item>
        <item name="shapeAppearanceLargeComponent">@style/Shape.Ocean.Radius</item>
        <item name="materialCardViewStyle">@style/Ocean.Card</item>
        <item name="floatingActionButtonStyle">@style/Ocean.Fab</item>
        <item name="toolbarStyle">@style/Ocean.Toolbar</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Shape.Ocean.Radius" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="Ocean.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/op_primary</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="Ocean.Fab" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/op_primary</item>
        <item name="rippleColor">@color/op_secondary</item>
    </style>

    <style name="Ocean.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/op_surface</item>
        <item name="titleTextColor">@color/op_text</item>
        <item name="subtitleTextColor">@color/op_text_muted</item>
        <item name="elevation">4dp</item>
    </style>

    <style name="Ocean.TextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/op_primary</item>
        <item name="hintTextColor">@color/op_text_muted</item>
    </style>
</resources>
